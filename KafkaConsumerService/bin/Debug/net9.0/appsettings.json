{
  "UseInMemoryDb": true,
  "KafkaConfig": {
    "BootstrapServers": "http://172.25.20.14:9092",
    "Topic": "kafka-consumer-cruid-group-crm",
    "GroupId": "12345",
    "ModelNameSpace": "KafkaConsumerService.Models"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Email" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning", // Beispiel: nur Warnungen und schwerwiegendere Fehler von Microsoft-Komponenten
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "from": "Mailer@apano.de",
          "to": "Vadym.Voytas@apano.de",
          "host": "s15-exchange.apano.local",
          "port": 25,
          "restrictedToMinimumLevel": "Information", // Information, Warning, Error, Fatal
          "subject": "Log Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "from": "Mailer@apano.de",
          "to": "Vadym.Voytas@apano.de",
          "bcc": "Vadym.Voytas@apano.de",
          "host": "s15-exchange.apano.local",
          "port": 25,
          "restrictedToMinimumLevel": "Information", // Information, Warning, Error, Fatal
          "subject": "Log Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
